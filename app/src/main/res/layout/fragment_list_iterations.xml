<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/side_back"
    tools:context="com.example.ruben.processdashapp.listProjects">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="70dp">
        <TextView
            android:id="@+id/tituloListas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  Lista de Iteraciones"
            android:textSize="30sp"
            android:textColor="#ffffff"
            android:layout_marginTop="10dp"/>

        <ListView
            android:id="@+id/listViewIterations"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_below="@+id/tituloListas"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="80dp"
            android:textColor="#ffffff"/>

        <RelativeLayout
            android:id="@+id/glbuttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="100dp">

            <Button
                android:id="@+id/buttonAddIteracion"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="90dp"
                android:background="@drawable/boton_redondo_2"
                android:text="+" android:textSize="20sp"/>

            <Button
                android:id="@+id/buttonRemoveIteracion"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="80dp"
                android:layout_toEndOf="@+id/buttonAddIteracion"
                android:background="@drawable/boton_redondo_3"
                android:text="-" android:textSize="30sp"/>
        </RelativeLayout>

        <Button
            android:id="@+id/buttonEndIteracion"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="25dp"
            android:background="@drawable/boton_redondo_4"
            android:text="Finalizar Proyecto"/>

    </RelativeLayout>


</FrameLayout>
