<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/side_nav_bar">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="250dp">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_row="3"
                android:layout_column="1"
                android:rowCount="5"
                android:columnCount="3">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/type"
                    android:text="Tipo"
                    android:textSize="15sp"
                    android:textColor="#ffffff"
                    android:textAlignment="center"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="15dp"
                    android:layout_row="0"/>

                <Spinner
                    android:id="@+id/spinnerDialog"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_marginTop="20dp"
                    android:scrollbarStyle="outsideInset"
                    android:scrollbarAlwaysDrawVerticalTrack="true"
                    android:textColor="#ffffff"
                    android:entries="@array/lista_tipos_errores"/>

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/date"
                    android:text="Fecha"
                    android:textSize="15sp"
                    android:textColor="#ffffff"
                    android:textAlignment="center"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="10dp"
                    android:layout_row="1"
                    android:layout_column="0"/>

                <EditText
                    android:id="@+id/dateContent"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_column="1"
                    android:layout_row="1"
                    android:ems="10"
                    android:inputType="date"
                    android:textColor="#ffffff"/>

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/errTime"
                    android:text="Tiempo Arreglo"
                    android:textSize="15sp"
                    android:textColor="#ffffff"
                    android:textAlignment="center"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="10dp"
                    android:layout_row="2"
                    android:layout_column="0"/>

                <ImageButton
                    android:id="@+id/buttonStartDialog"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="-120dp"
                    android:layout_marginTop="15dp"
                    android:layout_column="1"
                    android:layout_row="2"
                    android:src="@drawable/ic_play_arrow"
                    android:background="@drawable/boton_redondo_2"/>
                <ImageButton
                    android:id="@+id/buttonStopDialog"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:layout_column="1"
                    android:layout_row="2"
                    android:layout_marginStart="-50dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/ic_stop"
                    android:background="@drawable/boton_redondo_3"/>

                <Chronometer
                    android:id="@+id/cronometroErr"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:layout_row="2"
                    android:layout_column="1"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="80dp"
                    android:layout_gravity="top|center"
                    android:background="#ffb866" />

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/description"
                    android:text="DescripciÃ³n"
                    android:textSize="15sp"
                    android:textColor="#ffffff"
                    android:textAlignment="center"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="10dp"
                    android:layout_row="4"
                    android:layout_column="0"/>

                <EditText
                    android:id="@+id/descriptionContent"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_row="4"
                    android:layout_marginTop="15dp"
                    android:ems="10"
                    android:layout_weight="1"
                    android:inputType="textCapSentences|textMultiLine"
                    android:maxLength="2000"
                    android:maxLines="4"/>

            </GridLayout>
        </GridLayout>
    </RelativeLayout>
</FrameLayout>
